---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;

const fullTitle = title
  ? `${title} â€¢ The Quotient Series`
  : "The Quotient Series";

const metaDescription =
  description ??
  "Techno-thriller novels by Gregory R. Simpson: The Quantum Contingent and Quantum Time.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={metaDescription} />
    <title>{fullTitle}</title>

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" />

    <!-- Google Font: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="min-h-screen text-neutral-900 antialiased">
    <Header />

    <main class="mx-auto w-full max-w-6xl px-4 py-10">
      <slot />
    </main>

    <Footer />
  </body>
</html>
---
const { title, subtitle, description, coverSrc, links = [], extra } = Astro.props;
---

<article class="rounded-2xl border border-neutral-200 p-5 shadow-sm">
  <div class="grid gap-5 md:grid-cols-[160px_1fr] md:items-start">
    <img
      src={coverSrc}
      alt={`${title} cover`}
      class="w-full max-w-[220px] rounded-xl border border-neutral-200"
      loading="lazy"
    />

    <div>
      <h3 class="text-2xl font-semibold">{title}</h3>
      {subtitle ? <p class="mt-1 text-sm text-neutral-600">{subtitle}</p> : null}

      <p class="mt-4 text-neutral-800">{description}</p>

      {extra ? <div class="mt-4 text-sm text-neutral-700">{extra}</div> : null}

      <div class="mt-5 flex flex-wrap gap-2">
        {links.map((l) => (
          <a
            href={l.href}
            class="rounded-xl border border-neutral-200 bg-neutral-50 px-4 py-2 text-sm hover:bg-white"
            target="_blank"
            rel="noreferrer"
          >
            {l.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</article>

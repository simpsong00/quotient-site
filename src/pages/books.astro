---
import BaseLayout from "../layouts/BaseLayout.astro";
import BookCard from "../components/BookCard.astro";

const books = [
  {
    title: "The Quantum Contingent",
    subtitle: "A globe-trotting techno-spy thriller",
    coverSrc: "quotient-site/images/books/quantum-contingent.jpg",
    description:
      "The future… is here. A globe-trotting techno-spy thriller with pop-culture references and its own Spotify playlist. Set in richly detailed locations around the globe and features today’s technologies extrapolated for tomorrow, including cryptocurrency, drones, and SpaceX rocket ships.",
    extra:
      "Reviews (Readers' Favorite): “The descriptions are fun, the imagery is vivid, and the dialogues are exciting... I loved it and highly recommend it!” — Rabia Tanveer (5 Stars)",
    links: [
      { label: "Amazon", href: "https://www.amazon.com/dp/0578307243" },
      { label: "Goodreads", href: "https://www.goodreads.com/" },
      { label: "Spotify playlist", href: "https://open.spotify.com/" }
    ]
  },
  {
    title: "Quantum Time",
    subtitle: "A dual-timeline thriller (2028 ↔ 2050)",
    coverSrc: "quotient-site/images/books/quantum-time.jpg",
    description:
      "Jack and Sarah are back. When a mysterious wind of death threatens President O’Connor and other world leaders, vacation is over. Jumping between two different timelines, the team must save both today and tomorrow as the entangled missions stretch them to the breaking point.",
    extra:
      "Reviews (Readers' Favorite): “Lovers of time travel, sci-fi, and espionage thrillers will not be able to peel their eyes off this action-packed, fast-paced page-turner...” — Keith Mbuya (5 Stars)",
    links: [
      { label: "Amazon", href: "https://www.amazon.com/dp/B0F76X8FKR" },
      { label: "Spotify playlist", href: "https://spoti.fi/4ceGFTJ" }
    ]
  }
];
---

<BaseLayout title="Books">
  <div class="mx-auto max-w-5xl">
    <h1 class="text-4xl font-semibold tracking-tight">Books</h1>
    <p class="mt-3 text-neutral-700">Techno-thrillers set in richly detailed real-world locations—with tomorrow’s technology always close behind.</p>

    <div class="mt-8 grid gap-6">
      {books.map((b) => <BookCard {...b} />)}
    </div>
  </div>
</BaseLayout>
